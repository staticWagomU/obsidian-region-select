{
	"name": "obsidian-region-select",
	"version": "1.0.0",
	"description": "Emacs-inspired mark & point selection for mobile",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "oxlint && eslint .",
		"lint:oxlint": "oxlint",
		"lint:eslint": "eslint .",
		"format": "oxfmt --write src/",
		"format:check": "oxfmt src/",
		"test": "vitest",
		"test:run": "vitest run"
	},
	"keywords": [],
	"license": "0-BSD",
	"devDependencies": {
		"@eslint/js": "9.30.1",
		"@types/node": "^16.11.6",
		"esbuild": "0.25.5",
		"eslint": "^9.39.2",
		"eslint-plugin-obsidianmd": "0.1.9",
		"globals": "14.0.0",
		"jiti": "2.6.1",
		"oxfmt": "^0.23.0",
		"oxlint": "^1.38.0",
		"tslib": "2.4.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "8.35.1",
		"vitest": "^4.0.16"
	},
	"dependencies": {
		"obsidian": "latest"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
